<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/White">

    <android.support.v7.widget.CardView
        android:id="@+id/cardViewPointTable"
        android:layout_width="fill_parent"
        android:layout_height="65dp"
        android:layout_gravity="fill_horizontal"
        card_view:cardCornerRadius="5dp"
        card_view:cardMaxElevation="15dp"
        card_view:cardElevation="10dp"
        card_view:contentPadding="5dp"
        android:padding="1dp"
        android:layout_margin="2dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/textViewTeamsName"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_alignBottom="@+id/twga1"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/imageViewTeams"
                android:layout_toLeftOf="@id/twga1"
                android:layout_toRightOf="@+id/imageViewTeams"
                android:layout_toStartOf="@id/twga1"
                android:background="@color/White"
                android:gravity="start"
                android:text="Friends"
                android:textAlignment="gravity"
                android:textColor="@color/Black"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewTeamsPoint"
                android:layout_width="20dp"
                android:layout_height="20dp"

                android:background="@color/White"
                android:gravity="start"

                android:text="-"
                android:textAlignment="gravity"
                android:textColor="@color/red"
                android:textSize="12dp"
                android:textStyle="bold"
                android:layout_alignTop="@+id/textViewTeamsName"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />


            <TextView
                android:id="@+id/textViewTeamsWeek"
                android:layout_width="20dp"
                android:layout_height="20dp"

                android:layout_alignTop="@+id/textViewTeamsName"
                android:layout_toLeftOf="@+id/textViewTeamsPoint"
                android:layout_toStartOf="@+id/textViewTeamsPoint"
                android:background="@color/White"
                android:gravity="start"
                android:text="-"
                android:textAlignment="gravity"
                android:textColor="@color/Black"
                android:textSize="12dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageViewTeams"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/twn1"
                android:layout_toRightOf="@+id/twn1"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                card_view:srcCompat="@drawable/myprofile" />

            <TextView
                android:id="@+id/twn1"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_alignBaseline="@+id/imageViewTeams"
                android:layout_alignBottom="@+id/imageViewTeams"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:text="TextView"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textViewTeamsWeek"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/textViewTeamsWeek"
                android:text="H" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/textViewTeamsWeek"
                android:layout_toRightOf="@+id/textViewTeamsWeek"
                android:text="P" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>



</RelativeLayout>