<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/red"
    tools:context="com.sgfootcal.android.footcal.Activities.Favorites">


    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView5"
        android:layout_marginTop="61dp"
        android:background="@color/White"
        android:drawableLeft="@drawable/mail"
        android:ems="10"
        android:fontFamily="serif-monospace"
        android:hint="Email"
        android:inputType="textMultiLine"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="40dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/email"
        android:layout_marginTop="43dp"
        android:background="@color/White"
        android:drawableLeft="@drawable/mail"
        android:ems="10"
        android:fontFamily="serif-monospace"
        android:hint="Şifre"
        android:inputType="numberPassword"
        android:maxLength="6"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="40dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/password2"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/password"
        android:layout_marginTop="49dp"
        android:background="@color/White"
        android:drawableLeft="@drawable/mail"
        android:ems="10"
        android:fontFamily="serif-monospace"
        android:hint="Şifre-Tekrar"
        android:inputType="numberPassword"
        android:maxLength="6"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="40dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/buttonsignin"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/password2"
        android:layout_marginTop="104dp"
        android:background="@color/MediumBlue"
        android:fontFamily="serif-monospace"
        android:text="KAYIT OL"
        android:textAppearance="@android:style/TextAppearance.Widget.DropDownHint"
        android:textSize="40dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView6"
        android:background="@android:color/white"
        android:backgroundTint="@android:color/white"
        android:fontFamily="serif-monospace"
        android:gravity="center_vertical|center"
        android:text="~~KAYIT OL~~"
        android:textColor="@color/black"
        android:textSize="40dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/signupbacktologin"
        android:layout_width="60dp"
        android:layout_height="125dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@drawable/left_large" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:fontFamily="serif-monospace"
        android:gravity="center"
        android:text="~~FootCal~~"
        android:textColor="@color/White"
        android:textSize="45dp"
        android:textStyle="bold" />


</RelativeLayout>
