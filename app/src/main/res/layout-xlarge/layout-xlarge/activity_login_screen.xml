<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/teal"
    tools:context="com.sgfootcal.android.footcal.Activities.Favorites">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@android:color/white"
        android:backgroundTint="@android:color/white"
        android:fontFamily="serif-monospace"
        android:gravity="center_vertical|center"
        android:text="~~GİRİŞ YAP~~"
        android:textColor="@color/black"
        android:textSize="35dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView5"
        android:layout_marginTop="121dp"
        android:drawableLeft="@drawable/mail"
        android:ems="10"
        android:fontFamily="serif-monospace"
        android:hint="Email"
        android:inputType="textMultiLine"
        android:textColor="#FFFFFF"
        android:textColorHint="@color/White"
        android:textSize="35dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/email"
        android:layout_marginTop="38dp"
        android:drawableLeft="@drawable/mail"
        android:ems="10"
        android:fontFamily="serif-monospace"
        android:hint="Password"
        android:inputType="numberPassword"
        android:maxLength="6"
        android:textColor="#FFFFFF"
        android:textColorHint="@color/White"
        android:textSize="35dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/buttonsignin"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/password"
        android:layout_marginTop="74dp"
        android:background="@color/ForestGreen"
        android:fontFamily="serif-monospace"
        android:text="GİRİŞ YAP"
        android:textAppearance="@android:style/TextAppearance.Widget.DropDownHint"
        android:textSize="30dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/buttonsignup"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/buttonsignin"
        android:background="@color/red"
        android:fontFamily="serif-monospace"
        android:text="KAYIT OL"
        android:textColor="@color/White"
        android:textSize="30dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/loginright"
        android:layout_width="75dp"
        android:layout_height="125dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@drawable/right2" />

    <ImageView
        android:id="@+id/loginleft"
        android:layout_width="75dp"
        android:layout_height="125dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@drawable/left" />

    <Button
        android:id="@+id/forgotpassword"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/buttonsignup"
        android:background="@color/blue"
        android:fontFamily="serif-monospace"
        android:text="ŞİFREMİ UNUTTUM"
        android:textColor="@color/White"
        android:textSize="30dp"
        android:textStyle="bold" />


</RelativeLayout>
