
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/White"
    >


    <android.support.v7.widget.CardView
        android:id="@+id/cardViewYellowOrRedCard"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:layout_gravity="fill_horizontal"
        android:layout_margin="2dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/twname1"
                android:layout_width="match_parent"
                android:layout_height="50dp"

                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/textViewShirtNumber"
                android:layout_toRightOf="@+id/textViewShirtNumber"
                android:background="@color/White"
                android:fontFamily="serif-monospace"
                android:text="Friends"
                android:textAlignment="gravity"
                android:textColor="@color/Black"
                android:textSize="30dp" />


            <TextView
                android:id="@+id/textViewYellowCard"
                android:layout_width="45dp"
                android:layout_height="30dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/imageViewYellow"
                android:background="@color/White"
                android:gravity="center"
                android:text="Number"
                android:textAlignment="gravity"
                android:textColor="@color/Black"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewRedCard"
                android:layout_width="45dp"
                android:layout_height="30dp"
                android:layout_alignParentBottom="true"
                android:layout_below="@+id/imageViewYellow"
                android:layout_toLeftOf="@+id/textViewYellowCard"
                android:layout_toStartOf="@+id/textViewYellowCard"
                android:background="@color/White"
                android:gravity="center"
                android:text="Number"
                android:textAlignment="gravity"
                android:textColor="@color/Black"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewShirtNumber"
                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="TextView"
                android:textColor="@color/Red"
                android:textSize="20dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageViewYellow"
                android:layout_width="45dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                card_view:srcCompat="@mipmap/yellow" />

            <ImageView
                android:id="@+id/imageVieRed"
                android:layout_width="45dp"
                android:layout_height="30dp"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/textViewYellowCard"
                android:layout_toStartOf="@+id/textViewYellowCard"
                card_view:srcCompat="@mipmap/red" />


        </RelativeLayout>


    </android.support.v7.widget.CardView>

</RelativeLayout>


