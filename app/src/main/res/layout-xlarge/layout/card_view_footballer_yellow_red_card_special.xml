
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/White"
    >


    <android.support.v7.widget.CardView
        android:id="@+id/cardViewYellowOrRedCard"
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:layout_gravity="fill_horizontal"
        card_view:cardCornerRadius="5dp"
        card_view:cardMaxElevation="15dp"
        card_view:cardElevation="10dp"
        card_view:contentPadding="5dp"
        android:padding="1dp"
        android:layout_margin="1dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/twname1"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@color/White"
                android:text="Friends"
                android:textAlignment="gravity"
                android:textColor="@color/Black"
                android:textSize="18dp"

                android:textStyle="bold"
                android:layout_alignBaseline="@+id/textViewShirtNumber"
                android:layout_alignBottom="@+id/textViewShirtNumber"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_toRightOf="@+id/textViewShirtNumber"
                android:layout_toEndOf="@+id/textViewShirtNumber" />


            <TextView
                android:id="@+id/textViewYellowCard"
                android:layout_width="45dp"
                android:layout_height="30dp"
                android:background="@color/White"
                android:gravity="center"
                android:text="Number"
                android:textAlignment="gravity"
                android:textColor="@color/Black"
                android:textSize="14dp"
                android:textStyle="bold"
                android:layout_below="@+id/imageViewYellow"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true" />

            <TextView
                android:id="@+id/textViewRedCard"
                android:layout_width="45dp"
                android:layout_height="30dp"
                android:background="@color/White"
                android:gravity="center"
                android:text="Number"
                android:textAlignment="gravity"
                android:textColor="@color/Black"
                android:textSize="14dp"
                android:textStyle="bold"
                android:layout_alignParentBottom="true"
                android:layout_toLeftOf="@+id/textViewYellowCard"
                android:layout_toStartOf="@+id/textViewYellowCard"
                android:layout_below="@+id/imageViewYellow" />

            <TextView
                android:id="@+id/textViewShirtNumber"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:text="TextView"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="@color/Red" />

            <ImageView
                android:id="@+id/imageViewYellow"
                android:layout_width="45dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                card_view:srcCompat="@mipmap/yellow" />

            <ImageView
                android:id="@+id/imageVieRed"
                android:layout_width="45dp"
                android:layout_height="30dp"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/textViewYellowCard"
                android:layout_toStartOf="@+id/textViewYellowCard"
                card_view:srcCompat="@mipmap/red" />


        </RelativeLayout>


    </android.support.v7.widget.CardView>

</RelativeLayout>


