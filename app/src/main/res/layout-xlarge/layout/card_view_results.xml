<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/White">

    <android.support.v7.widget.CardView
        android:id="@+id/cardViewFixture"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:layout_gravity="fill_horizontal"
        android:backgroundTint="#FFFFFF"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/firstTeamR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/secondTeamR"
                android:layout_alignBottom="@+id/secondTeamR"
                android:layout_marginLeft="29dp"
                android:layout_marginStart="29dp"
                android:layout_toRightOf="@+id/imageViewTeams"
                android:text="FTR"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/secondTeamR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/textViewTeamsName2"
                android:layout_marginEnd="25dp"
                android:layout_marginRight="25dp"
                android:layout_toLeftOf="@+id/imageViewTeams2"
                android:layout_toStartOf="@+id/imageViewTeams2"
                android:text="STR"
                android:textSize="18dp" />
            <TextView
                android:id="@+id/textViewTeamsName"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="60dp"
                android:gravity="center"
                android:text="Friends"
                android:textAlignment="gravity"
                android:textColor="@color/Black"

                android:textSize="12dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewTeamsName2"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_alignParentBottom="true"
                android:layout_below="@+id/imageViewTeams2"

                android:gravity="center"
                android:text="Friends"
                android:textAlignment="gravity"

                android:textColor="@color/Black"
                android:textSize="12dp"
                android:textStyle="bold"
                android:layout_alignLeft="@+id/imageViewTeams2"
                android:layout_alignStart="@+id/imageViewTeams2" />


            <ImageView
                android:id="@+id/imageViewTeams"
                android:layout_width="80dp"
                android:layout_height="35dp"
                android:layout_marginBottom="25dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="25dp"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                card_view:srcCompat="@drawable/myprofile" />

            <ImageView
                android:id="@+id/imageViewTeams2"
                android:layout_width="80dp"
                android:layout_height="35dp"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                card_view:srcCompat="@drawable/myprofile"
                android:layout_marginRight="14dp"
                android:layout_marginEnd="14dp"
                android:layout_alignTop="@+id/imageViewTeams"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>




</RelativeLayout>