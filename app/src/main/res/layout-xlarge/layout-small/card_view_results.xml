<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/White">

    <android.support.v7.widget.CardView
        android:id="@+id/cardViewFixture"
        android:layout_width="fill_parent"
        android:layout_height="75dp"

        android:backgroundTint="#FFFFFF"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/firstTeamR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FTR"
                android:layout_marginLeft="44dp"
                android:layout_marginStart="44dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/imageViewTeams"
                android:layout_toEndOf="@+id/imageViewTeams" />
            <TextView
                android:id="@+id/secondTeamR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="STR"
                android:layout_marginRight="41dp"
                android:layout_marginEnd="41dp"
                android:layout_alignBaseline="@+id/firstTeamR"
                android:layout_alignBottom="@+id/firstTeamR"
                android:layout_toLeftOf="@+id/imageViewTeams2"
                android:layout_toStartOf="@+id/imageViewTeams2" />
            <TextView
                android:id="@+id/textViewTeamsName"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:gravity="center"
                android:text="Friends"
                android:textAlignment="gravity"
                android:textColor="@color/Black"

                android:textSize="10dp"
                android:textStyle="bold"
                android:layout_alignParentBottom="true"
                android:layout_alignLeft="@+id/imageViewTeams"
                android:layout_alignStart="@+id/imageViewTeams" />

            <TextView
                android:id="@+id/textViewTeamsName2"
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:layout_alignBaseline="@+id/textViewTeamsName"
                android:layout_alignBottom="@+id/textViewTeamsName"
                android:layout_toEndOf="@+id/secondTeamR"
                android:layout_toRightOf="@+id/secondTeamR"
                android:gravity="start"
                android:text="Friends"
                android:textAlignment="gravity"
                android:textColor="@color/Black"
                android:textSize="10dp"
                android:textStyle="bold" />



            <ImageView
                android:id="@+id/imageViewTeams"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                card_view:srcCompat="@drawable/myprofile"
                android:layout_marginLeft="22dp"
                android:layout_marginStart="22dp"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <ImageView
                android:id="@+id/imageViewTeams2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_above="@+id/textViewTeamsName"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="15dp"
                android:layout_marginRight="15dp"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                card_view:srcCompat="@drawable/myprofile" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>




</RelativeLayout>