<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/White">

    <android.support.v7.widget.CardView
        android:id="@+id/cardViewPointTable"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:layout_gravity="fill_horizontal"
        card_view:cardCornerRadius="5dp"
        card_view:cardMaxElevation="15dp"
        card_view:cardElevation="10dp"
        card_view:contentPadding="5dp"
        android:padding="1dp"

        android:layout_marginLeft="1dp"
        android:layout_marginTop="1dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/textViewTeamsName"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_alignBottom="@+id/textViewGoalOrAssist"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/imageViewTeams"
                android:layout_toLeftOf="@id/textViewGoalOrAssist"
                android:layout_toRightOf="@+id/imageViewTeams"
                android:layout_toStartOf="@id/textViewGoalOrAssist"
                android:background="@color/White"
                android:gravity="start"
                android:text="Friends"
                android:textAlignment="gravity"
                android:textColor="@color/Black"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewTeamsPoint"
                android:layout_width="35dp"
                android:layout_height="25dp"

                android:background="@color/White"
                android:gravity="start"

                android:text="-"
                android:textAlignment="gravity"
                android:textColor="@color/red"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_alignTop="@+id/textViewTeamsName"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:id="@+id/textViewTeamsAverage"
                android:layout_width="35dp"
                android:layout_height="25dp"

                android:layout_alignTop="@+id/textViewTeamsName"
                android:layout_toLeftOf="@+id/textViewTeamsPoint"
                android:layout_toStartOf="@+id/textViewTeamsPoint"
                android:background="@color/White"
                android:gravity="start"
                android:text="-"
                android:textAlignment="gravity"
                android:textColor="@color/Black"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewTeamsGA"
                android:layout_width="35dp"
                android:layout_height="25dp"

                android:layout_alignTop="@+id/textViewTeamsName"
                android:layout_toLeftOf="@+id/textViewTeamsAverage"
                android:background="@color/White"
                android:gravity="start"
                android:text="-"
                android:textAlignment="gravity"
                android:textColor="@color/Black"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewTeamsGF"
                android:layout_width="35dp"
                android:layout_height="25dp"

                android:layout_alignBaseline="@+id/textViewTeamsWeek"
                android:layout_alignBottom="@+id/textViewTeamsWeek"
                android:layout_toLeftOf="@+id/textViewTeamsGA"
                android:layout_toStartOf="@+id/textViewTeamsGA"
                android:background="@color/White"
                android:gravity="start"
                android:text="-"
                android:textAlignment="gravity"
                android:textColor="@color/Black"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewTeamsWeek"
                android:layout_width="35dp"
                android:layout_height="25dp"

                android:layout_alignTop="@+id/textViewTeamsName"
                android:layout_toLeftOf="@+id/textViewTeamsGF"
                android:layout_toStartOf="@+id/textViewTeamsGF"
                android:background="@color/White"
                android:gravity="start"
                android:text="-"
                android:textAlignment="gravity"
                android:textColor="@color/Black"
                android:textSize="20dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageViewTeams"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/textViewNumber"
                android:layout_toRightOf="@+id/textViewNumber"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                card_view:srcCompat="@drawable/myprofile" />

            <TextView
                android:id="@+id/textViewNumber"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_alignBaseline="@+id/imageViewTeams"
                android:layout_alignBottom="@+id/imageViewTeams"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:text="TextView"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:textSize="25dp"
                android:textStyle="bold" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>



</RelativeLayout>